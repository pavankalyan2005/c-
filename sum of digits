#include <iostream>
int main() {
    int number;
    std::cout << "Enter a number: ";
    std::cin >> number;
    int sum = 0;
    int temp = number; 
    while (temp != 0) {
        sum += temp % 10; 
        temp /= 10; 
    }
    std::cout << "The sum of the digits of " << number << " is: " << sum << std::endl;
    return 0;
}
